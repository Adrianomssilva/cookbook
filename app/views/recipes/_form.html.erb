<div class="mt-4 mb-2">
  <h2 class="">Nova Receita</h2>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger mt-2">
      <%= t('errors.template.header', :model => Recipe.model_name.human, :count => recipe.errors.count) %>
    </div>
  <% end %>
  <div class="card border-0 shadow-lg">
    <div class="card-body">
      <%= form_with model: recipe do |f| %>
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control mb-3' %>
        <p><%= f.label :recipe_type_id, class: 'form-label'  %>
        <%= f.collection_select :recipe_type_id, RecipeType.order(:name), :id, :name %></p>
        <%= f.label  :cook_time, class: 'form-label'  %>
        <%= f.text_field :cook_time, class: 'form-control mb-3' %>
        <%= f.label :ingredients, class: 'form-label'  %>
        <%= f.text_field :ingredients, class: 'form-control mb-3' %>
        <%= f.label :instructions, class: 'form-label'  %>
        <%= f.text_field :instructions, class: 'form-control mb-3' %>
        <%= f.submit nil, class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
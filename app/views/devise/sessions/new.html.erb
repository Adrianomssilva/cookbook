<div class="container">
  <div class="col d-flex justify-content-center">
    <div class="card border-0 shadow mt-5" style="width: 18rem;">
      <div class="card-header">
        <h2>Entrar</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-2" %>
          </div>

          <div class="field">
            <%= f.label :password, 'Senha', class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control my-2" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'Lembre de mim', class: 'form-label' %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Entrar", class:'btn btn-primary my-3' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
